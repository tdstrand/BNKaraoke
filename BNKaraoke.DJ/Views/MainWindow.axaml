<Window x:Class="BNKaraoke.DJ.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DJ Control Center" Width="1280" Height="800">
	<Grid>
		<Grid.RowDefinitions>
			<!-- Header Area -->
			<RowDefinition Height="Auto"/>
			<!-- Content Area -->
			<RowDefinition Height="*"/>
			<!-- Control Area -->
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- HEADER AREA (no border) -->
		<Grid Grid.Row="0" Margin="0,0,0,5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<!-- Left: Logo and Title -->
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10" Grid.Column="0">
				<!-- Updated image source using the avaers:// URI scheme -->
				<Image Source="avares://BNKaraoke.DJ/Assets/twosinger.png" Width="50" Height="50" Stretch="Uniform"/>
				<TextBlock Text="Bnkaraoke.com DJ Control Center" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
			</StackPanel>

			<!-- Center: Join Live Event Button -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
				<Button Content="{Binding JoinLiveEventButtonText}"
						Width="180" Height="40"
						Background="{Binding JoinLiveEventButtonColor}"
						IsVisible="{Binding IsJoinLiveEventButtonVisible}"/>
			</StackPanel>

			<!-- Right: Login/Logout and Settings -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10" Grid.Column="2">
				<Button Content="{Binding LoginButtonText}"
						Width="100" Height="40"
						Background="{Binding LoginButtonColor}"
						Command="{Binding LoginCommand}"
						Margin="0,0,10,0"/>
				<Button Content="Settings"
						Width="100" Height="40"
						Command="{Binding OpenSettingsCommand}"/>
			</StackPanel>
		</Grid>

		<!-- CONTENT AREA -->
		<Grid Grid.Row="1" Margin="10">
			<Grid.ColumnDefinitions>
				<!-- Queue Area: 3/4 width -->
				<ColumnDefinition Width="3*"/>
				<!-- Right-side Area (Song Details & Singers) 1/4 width -->
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Queue Area with thick border -->
			<Border Grid.Column="0" BorderBrush="Black" BorderThickness="3" Padding="5" Margin="5">
				<StackPanel>
					<TextBlock Text="{Binding CurrentEventName}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
					<ListBox Height="300">
						<ListBoxItem Content="Queue Item 1"/>
						<ListBoxItem Content="Queue Item 2"/>
						<ListBoxItem Content="Queue Item 3"/>
					</ListBox>
				</StackPanel>
			</Border>

			<!-- Right-side Area: Song Details and Singers (split vertically) -->
			<Grid Grid.Column="1" Margin="5">
				<Grid.RowDefinitions>
					<!-- Song Details: 60% -->
					<RowDefinition Height="0.6*"/>
					<!-- Singers: 40% -->
					<RowDefinition Height="0.4*"/>
				</Grid.RowDefinitions>

				<!-- Song Details with border -->
				<Border Grid.Row="0" BorderBrush="Black" BorderThickness="3" Padding="5" Margin="5">
					<StackPanel>
						<TextBlock Text="Song Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
						<TextBlock Text="Artist: (Placeholder)"/>
						<TextBlock Text="Genre: (Placeholder)"/>
						<TextBlock Text="Decade: (Placeholder)"/>
						<TextBlock Text="Length: (Placeholder)"/>
						<TextBlock Text="Requested by: (Placeholder)"/>
					</StackPanel>
				</Border>

				<!-- Singers Details with border -->
				<Border Grid.Row="1" BorderBrush="Black" BorderThickness="3" Padding="5" Margin="5">
					<StackPanel>
						<TextBlock Text="Singers" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
						<ScrollViewer Height="100">
							<StackPanel>
								<TextBlock Text="Singer 1: (Placeholder)"/>
								<TextBlock Text="Singer 2: (Placeholder)"/>
								<TextBlock Text="Singer 3: (Placeholder)"/>
							</StackPanel>
						</ScrollViewer>
					</StackPanel>
				</Border>
			</Grid>
		</Grid>

		<!-- CONTROL AREA -->
		<Grid Grid.Row="2" Margin="10">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Play" Width="80" Height="40" Margin="5"/>
				<Button Content="Stop" Width="80" Height="40" Margin="5"/>
				<Button Content="Resume" Width="80" Height="40" Margin="5"/>
				<Button Content="Skip" Width="80" Height="40" Margin="5"/>
				<Button Content="Launch Video" Width="100" Height="40" Margin="5"/>
				<TextBlock Text="Now Playing: (Placeholder)" Margin="15,0"/>
				<TextBlock Text="Up Next: (Placeholder)" Margin="15,0"/>
				<TextBlock Text="00:00 / 04:00 (Remaining: 04:00)" Margin="15,0"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>