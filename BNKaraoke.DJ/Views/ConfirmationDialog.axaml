<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BNKaraoke.DJ.ViewModels"
        x:Class="BNKaraoke.DJ.Views.ConfirmationDialog"
        x:DataType="vm:ConfirmationDialogViewModel"
        Title="{Binding Title}"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Yes" Command="{Binding ConfirmCommand}"/>
            <Button Content="No" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>