<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BNKaraoke.DJ.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="BNKaraoke.DJ.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="Login"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1e3a8a">
    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4B5563"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#1E90FF"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#06b6d4"/>
        </Style>
    </Window.Styles>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Phone Number" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" x:Name="PhoneNumberBox" Text="{Binding PhoneNumber}" 
                 KeyDown="PhoneNumber_KeyDown"
                 GotFocus="PhoneNumber_GotFocus"
                 Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="3" Text="Password" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" x:Name="PasswordBox" Text="{Binding Password}" 
                 PasswordChar="*" 
                 KeyDown="Password_KeyDown"
                 Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
            <Button Content="Login" Command="{Binding LoginCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>