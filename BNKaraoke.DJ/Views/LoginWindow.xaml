<!-- Views/LoginWindow.xaml -->
<Window x:Class="BNKaraoke.DJ.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="500" Background="#1E3A5F" WindowStartupLocation="CenterScreen">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="BNKaraoke.com Login"
               FontSize="26"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               Margin="0,10,0,20" />

    <Image Source="pack://application:,,,/Assets/TwoSingerMnt.png"
           Height="150"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           Margin="0,10"
           Grid.Row="1"/>

    <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,20,0,0">
      <TextBox x:Name="PhoneNumberBox"
               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
               Width="250"
               Height="35"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,10"
               HorizontalAlignment="Center"/>
      <PasswordBox x:Name="PasswordBox"
                   Width="250"
                   Height="35"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,10"
                   HorizontalAlignment="Center"/>
      <Button Content="Login"
              Command="{Binding LoginCommand}"
              Width="250"
              Height="40"
              Margin="0,20"
              FontWeight="Bold"
              Background="#3B82F6"
              Foreground="White"
              HorizontalAlignment="Center"/>
      <TextBlock Text="{Binding ErrorMessage}"
                 Foreground="Red"
                 FontSize="14"
                 TextAlignment="Center"
                 Margin="0,10"/>
    </StackPanel>
  </Grid>
</Window>