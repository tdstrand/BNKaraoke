<Window x:Class="BNKaraoke.DJ.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BNKaraoke.com Login"
        Height="600" Width="500"
        Background="#1E3A5F"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="BNKaraoke.com Login"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <Image Source="pack://application:,,,/Assets/TwoSingerMnt.png"
               Width="250"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               Margin="0,10"
               Grid.Row="1"/>

        <StackPanel Grid.Row="2" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBlock Text="Phone Number"
                       FontSize="14"
                       Foreground="White"
                       FontWeight="SemiBold"
                       Margin="0,5,0,0"
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="PhoneNumberBox" TextAlignment="Center"
                     Width="250"
                     Height="35"
                     FontSize="18"
                     Margin="0,5"
                     HorizontalAlignment="Center"
                     ToolTip="Enter 10-digit phone number"/>

            <TextBlock Text="Password"
                       FontSize="14"
                       Foreground="White"
                       FontWeight="SemiBold"
                       Margin="0,15,0,0"
                       HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" HorizontalContentAlignment="Center"
                         Width="250"
                         Height="35"
                         FontSize="18"
                         Margin="0,5"
                         HorizontalAlignment="Center"/>
        </StackPanel>

        <Button x:Name="LoginButton"
                Content="Login"
                Grid.Row="3"
                Width="100"
                Height="35"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="LoginButton_Click"/>
    </Grid>
</Window>
