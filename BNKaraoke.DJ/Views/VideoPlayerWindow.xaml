<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="BNKaraoke.DJ.Views.VideoPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="BNKaraoke.com Video Player" WindowState="Maximized" WindowStyle="None"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1e3a8a" Offset="0"/>
            <GradientStop Color="#3b82f6" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Background="{StaticResource WindowBackground}">
        <vlc:VideoView x:Name="VideoPlayer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Background="#1E3A8A"/>
        <TextBlock Text="BNKaraoke.com Video Player" FontSize="100" FontWeight="Bold" Foreground="White"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=VideoPlayer, Path=MediaPlayer.IsPlaying}" Value="True"/>
                                <Condition Binding="{Binding ElementName=VideoPlayer, Path=MediaPlayer.Media}" Value="{x:Null}"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</Window>