<Window x:Class="BNKaraoke.DJ.Views.SettingsDialog"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:BNKaraoke.DJ.ViewModels"
        mc:Ignorable="d"
        Title="Settings"
        Width="600" Height="600" WindowStartupLocation="CenterScreen"
        CanResize="False">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" DataContext="{Binding Settings}">
			<TextBlock Text="Custom Message" FontWeight="Bold" Margin="0,0,0,5"/>
			<TextBox Text="{Binding CustomMessage}" Margin="0,0,0,10" AcceptsReturn="True" AcceptsTab="True" Height="100"/>
			<StackPanel Orientation="Horizontal" Margin="5">
				<TextBlock Text="API URL:" Width="150" VerticalAlignment="Center"/>
				<ComboBox ItemsSource="{Binding AvailableApiUrls}" SelectedItem="{Binding ApiUrl}" Width="200"/>
			</StackPanel>
		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Save" Command="{Binding SaveCommand}" Margin="5" Width="100" Height="40"/>
			<Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" Width="100" Height="40"/>
		</StackPanel>
	</Grid>
</Window>